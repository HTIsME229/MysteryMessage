<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="rippleColor">@color/transparent</item>
    </style>
    <style name="MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#D6D6D6</item> <!-- Đổi màu nền đúng cách -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item> <!-- Giảm padding để nút không quá to -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Chữ trắng để nổi bật trên nền xanh -->
        <item name="android:gravity">center</item>
        <item name="cornerRadius">12dp</item> <!-- Bo góc nhẹ để đẹp hơn -->
    </style>


    <style name="Theme.FullScreenBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="TransparentStatusBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>


</resources>