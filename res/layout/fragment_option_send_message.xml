<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_button"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:text="Message Options"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- GridLayout với 2 cột -->
    <GridLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:columnCount="2"
        android:rowCount="3">

        <!-- Button 1 -->
        <Button
            style="@style/CustomButtonStyle"
            android:id="@+id/option_secret"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/incognito_32"
            android:gravity="center"
            android:text="@string/secret_message" />

        <!-- Button 2 -->
        <Button
            android:id="@+id/option_time"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_message"
            android:gravity="center"
            android:text="Timed Box" />

        <!-- Button 3 -->
        <Button
            android:id="@+id/option_location"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_message"
            android:gravity="center"
            android:text="Location Opening" />

        <!-- Button 4 -->
        <Button
            android:id="@+id/option_scheduled"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_message"
            android:gravity="center"
            android:text="Scheduled Message" />

        <!-- Button 5 -->
        <Button
            android:id="@+id/option_anonymous"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_message"
            android:gravity="center"
            android:text="Anonymous Sending" />

        <!-- Button 6 -->
        <Button
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_message"
            android:gravity="center"
            android:text="Anonymous Sending" />

    </GridLayout>

</LinearLayout>
